@model IEnumerable<CineWeb.Models.Actor>
@{
    ViewData["Title"] = "Actores";
    string q = Context.Request.Query["q"];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0 text-light"><i class="bi bi-people"></i> Actores</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo actor
    </a>
</div>

<form method="get" class="mb-3" role="search">
    <div class="input-group">
        <input type="search"
               name="q"
               value="@q"
               class="form-control bg-dark text-light border-secondary"
               placeholder="Buscar actor por nombre…">
        <button class="btn btn-outline-light" type="submit" title="Buscar">
            <i class="bi bi-search"></i>
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary" title="Limpiar">
            <i class="bi bi-eraser"></i>
        </a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info bg-transparent text-info border border-info-subtle">
        No se encontraron actores.
    </div>
}
else
{
    <div class="row g-4">
        @{
            var counts = ViewBag.PeliculasPorActor as IDictionary<int, int>
            ?? new Dictionary<int, int>();
        }
        @foreach (var a in Model.OrderBy(x => x.Nombre))
        {
            var peliculasCount = counts.TryGetValue(a.Id, out var c) ? c : 0;
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100" style="background:#1b1b1b;border:1px solid #2a2a2a;">
                    <div class="card-body">
                        <h2 class="h6 text-light mb-1">
                            <i class="bi bi-person"></i> @a.Nombre
                        </h2>
                        @if (a.FechaNacimiento.HasValue)
                        {
                            <div class="small text-muted">
                                <i class="bi bi-calendar3"></i> @a.FechaNacimiento.Value.ToString("yyyy-MM-dd")
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(a.Biografia))
                        {
                            <p class="small text-muted mt-2 mb-0">
                                @a.Biografia.Substring(0, Math.Min(110, a.Biografia.Length))@(a.Biografia.Length > 110 ? "…" : "")
                            </p>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex align-items-center gap-2">
                        <span class="badge bg-info text-dark" title="Películas">@peliculasCount</span>
                        <a class="btn btn-sm btn-outline-light ms-auto" asp-action="Details" asp-route-id="@a.Id">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@a.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@a.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
