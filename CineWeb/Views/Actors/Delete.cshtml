@model CineWeb.Models.Actor
@{
    ViewData["Title"] = "Eliminar actor";
}

<h1 class="h4 mb-3 text-danger"><i class="bi bi-trash"></i> Eliminar actor</h1>

<div class="alert alert-warning" style="background:#1b1b1b;border:1px solid #2a2a2a;">
    ¿Seguro que deseas eliminar a <strong>@Model.Nombre</strong>?
    @if (Model.Peliculas?.Any() == true)
    {
        <div class="mt-2">
            <i class="bi bi-exclamation-triangle"></i>
            El actor está asociado a <strong>@Model.Peliculas.Count()</strong> película(s).
            Se eliminará la relación en la tabla intermedia según tu configuración.
        </div>
    }
</div>

<form asp-action="Delete" method="post" class="d-inline">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-check2-circle"></i> Sí, eliminar
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
