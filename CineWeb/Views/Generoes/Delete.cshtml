@model CineWeb.Models.Genero
@{
    ViewData["Title"] = "Eliminar género";
}

<h1 class="h4 mb-3 text-danger"><i class="bi bi-trash"></i> Eliminar género</h1>

<div class="alert alert-warning">
    ¿Seguro que deseas eliminar el género <strong>@Model.Nombre</strong>?
    @if (Model.Peliculas?.Any() == true)
    {
        <div class="mt-2">
            <i class="bi bi-exclamation-triangle"></i> Tiene películas asociadas
            (@Model.Peliculas.Count). Deberás reasignarlas o eliminar la relación según tus reglas.
        </div>
    }
</div>

<form asp-action="Delete" method="post" class="d-inline">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-check2-circle"></i> Sí, eliminar
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
