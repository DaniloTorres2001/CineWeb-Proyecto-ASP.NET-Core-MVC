@model CineWeb.Models.Genero
@{
    ViewData["Title"] = "Detalle de género";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0"><i class="bi bi-tags"></i> @Model.Nombre</h1>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10 text-muted">@Model.Descripcion</dd>
        </dl>
    </div>
</div>

<h2 class="h5 mb-3"><i class="bi bi-film"></i> Películas de este género</h2>

@if (Model.Peliculas == null || !Model.Peliculas.Any())
{
    <div class="alert alert-info">Aún no hay películas asociadas.</div>
}
else
{
    <div class="row g-4">
        @foreach (var p in Model.Peliculas.OrderBy(p => p.Titulo))
        {
            var poster = string.IsNullOrWhiteSpace(p.ImagenRuta) ? "/images/no-poster.png" : p.ImagenRuta;
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card card-movie h-100">
                    <img src="@poster" class="poster" alt="@p.Titulo" />
                    <div class="card-body">
                        <h3 class="h6 mb-1">@p.Titulo</h3>
                        @if (p.FechaEstreno.HasValue)
                        {
                            <div class="small text-muted">
                                <i class="bi bi-calendar3"></i> @p.FechaEstreno.Value.ToString("yyyy")
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex gap-2">
                        <a class="btn btn-sm btn-outline-light" asp-controller="Peliculas" asp-action="Details" asp-route-id="@p.Id">
                            <i class="bi bi-info-circle"></i> Ver
                        </a>
                        <a class="btn btn-sm btn-primary" asp-controller="Peliculas" asp-action="Edit" asp-route-id="@p.Id">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
