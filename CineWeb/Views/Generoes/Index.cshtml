@model IEnumerable<CineWeb.Models.Genero>
@{
    ViewData["Title"] = "Géneros";
    string q = Context.Request.Query["q"];
    var counts = ViewBag.PeliculasPorGenero as IDictionary<int, int> ?? new Dictionary<int, int>();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0 text-light"><i class="bi bi-tags"></i> Géneros</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo género
    </a>
</div>

<form method="get" class="mb-3" role="search">
    <div class="input-group">
        <input type="search"
               name="q"
               value="@q"
               class="form-control bg-dark text-light border-secondary"
               placeholder="Buscar género por nombre…">
        <button class="btn btn-outline-light" type="submit">
            <i class="bi bi-search"></i>
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-eraser"></i>
        </a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info bg-transparent text-info border border-info-subtle">
        No se encontraron géneros.
    </div>
}
else
{
    <div class="panel-seamless rounded-3">
        <ul class="list-group list-group-flush">
            @foreach (var g in Model)
            {
                var count = counts.TryGetValue(g.Id, out var c) ? c : 0;
                <li class="list-group-item bg-transparent text-light border-secondary d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between py-3">
                    <div class="me-md-3">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold text-light">@g.Nombre</span>
                            <span class="badge bg-info text-dark">@count</span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(g.Descripcion))
                        {
                            <div class="small text-muted mt-1">@g.Descripcion</div>
                        }
                    </div>

                    <div class="mt-2 mt-md-0 d-flex flex-wrap gap-2">
                        <a class="btn btn-sm btn-outline-light"
                           asp-controller="Peliculas" asp-action="Index"
                           asp-route-generos="@g.Id">
                            <i class="bi bi-film"></i> Ver películas
                        </a>
                        <a class="btn btn-sm btn-outline-light"
                           asp-action="Details" asp-route-id="@g.Id">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a class="btn btn-sm btn-primary"
                           asp-action="Edit" asp-route-id="@g.Id">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a class="btn btn-sm btn-outline-danger"
                           asp-action="Delete" asp-route-id="@g.Id">
                            <i class="bi bi-trash"></i> Borrar
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
}
