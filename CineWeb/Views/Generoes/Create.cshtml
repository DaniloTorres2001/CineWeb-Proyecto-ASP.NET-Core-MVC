@model CineWeb.Models.Genero
@{
    ViewData["Title"] = "Nuevo género";
}

<h1 class="h4 mb-3"><i class="bi bi-plus-circle"></i> Nuevo género</h1>

<form asp-action="Create" method="post" class="card card-body shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" autofocus />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="4" maxlength="500"></textarea>
        <div class="form-text">Máximo 500 caracteres.</div>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2-circle"></i> Guardar
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
