@model CineWeb.Models.Pelicula

@{
    ViewData["Title"] = "Crear Película";
}

<h1>Crear Película</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sinopsis" class="form-label"></label>
                <input asp-for="Sinopsis" class="form-control" />
                <span asp-validation-for="Sinopsis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Duracion" class="form-label"></label>
                <input asp-for="Duracion" class="form-control" />
                <span asp-validation-for="Duracion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaEstreno" class="form-label"></label>
                <input asp-for="FechaEstreno" type="date" class="form-control" />
                <span asp-validation-for="FechaEstreno" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImagenRuta" class="form-label"></label>
                <input asp-for="ImagenRuta" class="form-control" />
                <span asp-validation-for="ImagenRuta" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GeneroId" class="form-label"></label>
                <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
                <span asp-validation-for="GeneroId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DirectorId" class="form-label"></label>
                <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.DirectorId"></select>
                <span asp-validation-for="DirectorId" class="text-danger"></span>
            </div>

            <!-- 🔥 Multiselect de Actores (nombre 'actorIds' para que lo reciba el action) -->
            <div class="form-group mb-4">
                <label class="form-label">Actores</label>
                <select asp-items="ViewBag.ActorIds" multiple class="form-control" name="actorIds"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
