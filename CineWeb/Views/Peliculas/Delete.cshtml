@model CineWeb.Models.Pelicula
@{
    ViewData["Title"] = "Eliminar";
    var poster = string.IsNullOrWhiteSpace(Model.ImagenRuta) ? "/images/no-poster.png" : Model.ImagenRuta;
}

<h1 class="h4 mb-3">¿Eliminar esta película?</h1>

<div class="row g-4">
    <div class="col-md-3">
        <img src="@poster" alt="@Model.Titulo" class="img-fluid rounded border" />
    </div>
    <div class="col-md-9">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Género</dt>
            <dd class="col-sm-9">@Model.Genero?.Nombre</dd>

            <dt class="col-sm-3">Director</dt>
            <dd class="col-sm-9">@Model.Director?.Nombre</dd>

            <dt class="col-sm-3">Duración</dt>
            <dd class="col-sm-9">@Model.Duracion min</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
            <a class="btn btn-outline-secondary ms-2" asp-action="Index"><i class="bi bi-arrow-left"></i> Cancelar</a>
        </form>
    </div>
</div>
