@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var title = ViewData["Title"] as string ?? "CineWeb";
}
<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - CineWeb</title>

    <!-- Bootstrap 5 (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous">

    <!-- Iconos -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Estilos del proyecto -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />

    <meta name="theme-color" content="#0b0f17" />
</head>
<body>
    <header class="border-bottom-0">
        <nav class="navbar navbar-expand-lg navbar-dark bg-movies">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Peliculas" asp-action="Index" title="Inicio">
                    <i class="bi bi-film"></i>
                    <span>CineWeb</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Alternar navegación">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Peliculas" asp-action="Index"><i class="bi bi-collection-play"></i> Películas</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Actors" asp-action="Index"><i class="bi bi-people"></i> Actores</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Directors" asp-action="Index"><i class="bi bi-person-workspace"></i> Directores</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Generoes" asp-action="Index"><i class="bi bi-tags"></i> Géneros</a></li>
                    </ul>

                    <!-- Buscador simple hacia Películas -->
                    <form class="d-flex" asp-controller="Peliculas" asp-action="Index" method="get" role="search">
                        <div class="input-group">
                            <input class="form-control" type="search" name="q" placeholder="Buscar película..." aria-label="Buscar">
                            <button class="btn btn-outline-light" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <!-- Toasts con TempData -->
    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index:1080;">
            @if (TempData["Success"] is string s && !string.IsNullOrWhiteSpace(s))
            {
                <div class="toast align-items-center text-bg-success border-0 show" role="alert">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-check-circle me-2"></i>@s</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            }
            @if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
            {
                <div class="toast align-items-center text-bg-danger border-0 show" role="alert">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-x-circle me-2"></i>@e</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            }
            @if (TempData["Info"] is string i && !string.IsNullOrWhiteSpace(i))
            {
                <div class="toast align-items-center text-bg-info border-0 show" role="alert">
                    <div class="d-flex">
                        <div class="toast-body"><i class="bi bi-info-circle me-2"></i>@i</div>
                        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            }
        </div>
    </div>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top mt-auto py-3 small">
        <div class="container d-flex justify-content-between align-items-center">
            <span>© @DateTime.Now.Year · CineWeb</span>
            <span><i class="bi bi-film"></i> ASP.NET Core + EF Core</span>
        </div>
    </footer>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

    <!-- jQuery (para unobtrusive validation) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
