@model CineWeb.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-emoji-frown fs-1 text-danger me-3"></i>
                        <div>
                            <h1 class="h3 mb-0">Ups, algo salió mal</h1>
                            <small class="text-muted">Se produjo un error al procesar tu solicitud.</small>
                        </div>
                    </div>

                    <p>Si el problema persiste, por favor vuelve a intentarlo en unos minutos.</p>

                    @if (Model?.ShowRequestId ?? false)
                    {
                        <div class="alert alert-secondary">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> Volver al inicio
                    </a>
                    <a class="btn btn-outline-secondary ms-2" href="javascript:history.back()">
                        <i class="bi bi-arrow-left"></i> Regresar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
