@model IEnumerable<CineWeb.Models.Pelicula>
@{
    ViewData["Title"] = "Películas de " + (ViewBag.DirectorNombre ?? "");
}
<h2>@ViewData["Title"]</h2>
<p><a asp-action="Index">← Volver a directores</a></p>

<table class="table">
    <thead><tr><th>Título</th><th>Género</th><th></th></tr></thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Titulo</td>
                <td>@p.Genero?.Nombre</td>
                <td><a asp-controller="Peliculas" asp-action="Details" asp-route-id="@p.Id">Ver</a></td>
            </tr>
        }
    </tbody>
</table>
