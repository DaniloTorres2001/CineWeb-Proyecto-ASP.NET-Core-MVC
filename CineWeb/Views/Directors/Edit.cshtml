@model CineWeb.Models.Director
@{
    ViewData["Title"] = "Editar director";
}

<h1 class="h4 mb-3 text-light"><i class="bi bi-pencil-square"></i> Editar director</h1>

<form asp-action="Edit" method="post" class="card card-body shadow-sm" style="background:#1b1b1b;border:1px solid #2a2a2a;">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label text-light"></label>
        <input asp-for="Nombre" class="form-control bg-dark text-light border-secondary" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nacionalidad" class="form-label text-light"></label>
        <input asp-for="Nacionalidad" class="form-control bg-dark text-light border-secondary" />
        <span asp-validation-for="Nacionalidad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaNacimiento" class="form-label text-light"></label>
        <input asp-for="FechaNacimiento" type="date" class="form-control bg-dark text-light border-secondary" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2-circle"></i> Guardar cambios
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
